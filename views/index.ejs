    <style>
    body {
  background-color: #18181b;
  color: white;
  font-family: 'Segoe UI', sans-serif;
  margin: 0;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

/* === Chessboard Grid === */
.chessboard {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  grid-template-rows: repeat(8, 1fr);
  aspect-ratio: 1 / 1;
  max-width: 90vmin;
  width: 100%;
  border: 4px solid #333;
  border-radius: 0.75rem;
  overflow: hidden;
  box-shadow: 0 0 12px rgba(0, 0, 0, 0.4);
}

/* === Squares === */
.square {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: clamp(1.5rem, 4vw, 3rem);
}

.square.light {
  background-color: #f0d9b5;
}

.square.dark {
  background-color: #b58863;
}

/* === Pieces === */
.piece {
  cursor: pointer;
  user-select: none;
}

.piece.white {
  color: white;
  filter: drop-shadow(0 0 2px black);
}

.piece.black {
  color: black;
}

/* === Dragging State === */
.dragging {
  opacity: 0.5;
}

/* === Flipped Board (Black Side) === */
.flipped {
  transform: rotate(180deg);
}

.flipped .piece {
  transform: rotate(180deg);
}

/* === Game Over Modal === */
#gameOverModal {
  backdrop-filter: blur(5px);
  animation: fadeIn 0.3s ease-in-out;
}

#gameOverModal h2 {
  font-size: 1.5rem;
}

#gameOverModal button {
  transition: background-color 0.2s ease;
}

.square.highlight {
  box-shadow: inset 0 0 0 4px rgba(255, 255, 0, 0.4);
}

.piece {
  transition: transform 0.2s ease, opacity 0.2s ease;
}

/* Optional: animate pieces on drop */
.square .piece {
  animation: popIn 0.2s ease;
}

@keyframes popIn {
  from {
    transform: scale(1.3);
    opacity: 0.4;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* === Animations === */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}
    </style>
</head>
<body class="bg-zinc-900 flex flex-col items-center justify-center min-h-screen text-white p-4">

  <h2 id="turnDisplay" class="text-lg mt-4 font-semibold text-center">Turn: White</h2>


    <h1 class="text-2xl md:text-3xl font-bold mb-4 text-center"> – ♟ Chess.io –</h1>

    <div class="chessboard w-full max-w-[600px]">
        <!-- The board will be rendered here by JS -->
    </div>

